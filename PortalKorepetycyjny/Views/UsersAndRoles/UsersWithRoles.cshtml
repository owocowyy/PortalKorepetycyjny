@model IEnumerable<PortalKorepetycyjny.Models.UsersInRoleViewModel>

@{
    ViewBag.Title = "Użytkownicy";
}

<h2>Użytkownicy</h2>

<p>
    @Html.ActionLink("Stwórz nowego użytkownika", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditUser", new { id = item.UserId }) |
                @Html.ActionLink("Usuń", "DeleteUser", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Wróc", "Index")