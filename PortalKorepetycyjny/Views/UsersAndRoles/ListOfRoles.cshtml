@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Lista ról";
}

<h2>Lista ról</h2>

<p>
    @Html.ActionLink("Stwórz nową rolę", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditRole", new { name = item.Name }) |
                @Html.ActionLink("Usuń", "DeleteRole", new { name = item.Name })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Wróc", "Index")
